{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "skipLibCheck": true,
    "emitDeclarationOnly": false,
    "declaration": true,
    "esModuleInterop": true,
    "target": "es2022",
    "module": "es2022",
    "lib": [
      "es2022",
      "DOM"
    ],
    "sourceMap": true,
    "isolatedModules": true,
    "allowJs": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/test/**"
  ]
}